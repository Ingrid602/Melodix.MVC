@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Olvidaste tu contraseña?";
}

<div class="forgot-password-container" style="max-width:400px; margin:40px auto; padding:30px; background:#121212; border-radius:8px; box-shadow:0 2px 8px rgba(0,0,0,0.7); color:#fff;">
    <h1 class="text-center mb-3" style="font-weight:700; color:#1DB954;">@ViewData["Title"]</h1>
    <p class="text-center mb-4" style="color:#b3b3b3;">Ingresa tu correo electrónico para restablecer tu contraseña</p>

    <form method="post" novalidate>
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

        <div class="form-group mb-4">
            <label asp-for="Input.Email" class="form-label" style="font-weight:600; color:#fff;">Correo electrónico</label>
            <input asp-for="Input.Email" class="form-control" placeholder="nombre@ejemplo.com" autocomplete="username" aria-required="true"
                   style="background:#282828; border:none; color:#fff; padding:10px; border-radius:4px;" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100 py-2" style="background:#1DB954; border:none; font-size:1.1rem; font-weight:600; color:#000;">
            Restablecer contraseña
        </button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
