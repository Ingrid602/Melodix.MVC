@model Melodix.Modelos.PerfilUsuario

@{
    ViewData["Title"] = "Mi Perfil";
}

<div class="container mt-5 text-white" style="background-color: #121212; border-radius: 12px; padding: 40px;">
    <div class="text-center mb-4">
        <img src="@Model.FotoUrl" class="rounded-circle" style="width: 150px; height: 150px; object-fit: cover;" alt="Foto de perfil" />
        <h2 class="mt-3">@Model.Usuario?.Nombre</h2>
        <p>@Model.Bio</p>
        <p><strong>País:</strong> @Model.Pais</p>
        <p><strong>Fecha de nacimiento:</strong> @Model.FechaNacimiento.ToString("dd/MM/yyyy")</p>
        <a asp-action="Edit" asp-route-id="@Model.PerfilUsuarioId" class="btn btn-outline-light mt-3">Editar perfil</a>
    </div>
</div>
