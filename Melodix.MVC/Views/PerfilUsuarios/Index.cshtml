@model IEnumerable<Melodix.Modelos.PerfilUsuario>

@{
    ViewData["Title"] = "Mi Perfil";
}

<style>
    .perfil-card {
        background-color: #1e1e1e;
        border-radius: 50%;
        width: 180px;
        height: 180px;
        overflow: hidden;
        border: 3px solid #444;
        margin-bottom: 10px;
    }

        .perfil-card img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .perfil-nombre {
        color: white;
        font-size: 18px;
        font-weight: bold;
        text-align: center;
    }

    .perfil-link {
        text-decoration: none;
        color: inherit;
    }

    .perfil-container {
        display: flex;
        flex-wrap: wrap;
        gap: 30px;
        justify-content: center;
    }

    .perfil-item {
        text-align: center;
        width: 180px;
    }
</style>

<h2 class="text-white text-center mb-4">Explorar Perfiles</h2>

<div class="perfil-container">
    @foreach (var perfil in Model)
    {
        if (perfil.Usuario != null)
        {
            <div class="text-center">
                <a asp-action="Details" asp-route-id="@perfil.PerfilUsuarioId" style="text-decoration: none; color: inherit;">
                    <img src="@perfil.FotoUrl" class="rounded-circle" style="width: 150px;" />
                    <h5>@perfil.Usuario.Nombre</h5>
                    <p>Perfil</p>
                </a>
            </div>
        }
    }

</div>