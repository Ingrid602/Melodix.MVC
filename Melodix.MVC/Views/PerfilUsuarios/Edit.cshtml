@model Melodix.Modelos.PerfilUsuario

@{
    ViewData["Title"] = "Editar Perfil";
}

<h1 class="text-white">Editar Perfil</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" asp-route-id="@Model.PerfilUsuarioId" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PerfilUsuarioId" />

            <div class="form-group">
                <label asp-for="Bio" class="control-label text-white"></label>
                <input asp-for="Bio" class="form-control" />
                <span asp-validation-for="Bio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FechaNacimiento" class="control-label text-white"></label>
                <input asp-for="FechaNacimiento" type="date" class="form-control" />
                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Pais" class="control-label text-white"></label>
                <input asp-for="Pais" class="form-control" />
                <span asp-validation-for="Pais" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label text-white">Foto actual</label><br />
                <img src="@Model.FotoUrl" class="rounded-circle mb-2" style="width: 100px; height: 100px; object-fit: cover;" />
            </div>

            <div class="form-group">
                <label class="control-label text-white">Nueva foto</label>
                <input type="file" name="nuevaFoto" class="form-control" />
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Guardar" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
