@model Melodix.Modelos.Cancion

@{
    ViewData["Title"] = "Detalles de Canción";
}

<div class="container text-white py-5">
    <div class="row align-items-center mb-4">
        <div class="col-md-3">
            <img src="@(string.IsNullOrEmpty(Model.Urlimagen) ? "/img/default-song.jpg" : Model.Urlimagen)" class="img-fluid rounded shadow" alt="Canción">
        </div>
        <div class="col-md-9">
            <h2 class="display-5">@Model.Nombre</h2>
            <p class="text-muted">Género: @Model.Genero</p>
            <p class="text-muted">Duración: @Model.Duracion</p>
            <p>Artista: <strong>@Model.Artista?.NombreArtistico</strong></p>
        </div>
    </div>

    @if (Model.Album != null)
    {
        <h5>Álbum</h5>
        <div class="d-flex align-items-center">
            <img src="@(string.IsNullOrEmpty(Model.Album.urlImagen) ? "/img/default-album.jpg" : Model.Album.urlImagen)" class="me-3" style="width: 60px; height: 60px; object-fit: cover;" />
            <div>
                <p class="mb-0">@Model.Album.Nombre</p>
                <small class="text-muted">Lanzado: @Model.Album.FechaLanzamiento.ToShortDateString()</small>
            </div>
        </div>
    }
</div>
