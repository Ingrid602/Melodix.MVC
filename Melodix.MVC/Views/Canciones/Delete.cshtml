@model Melodix.Modelos.Cancion
@{
    ViewData["Title"] = "Eliminar canción";
}

<h2 class="text-white">🗑️ ¿Seguro que deseas eliminar esta canción?</h2>

<div class="card bg-dark text-white mt-3 p-3">
    <p><strong>Nombre:</strong> @Model.Nombre</p>
    <p><strong>Género:</strong> @Model.Genero</p>
    <p><strong>Duración:</strong> @Model.Duracion</p>

    @if (!string.IsNullOrEmpty(Model.Urlimagen))
    {
        <img src="@Model.Urlimagen" class="rounded shadow" width="180" />
    }
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="CancionId" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Create" class="btn btn-secondary">Cancelar</a>
</form>
