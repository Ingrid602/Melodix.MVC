@model Melodix.Modelos.Cancion
@{
    ViewData["Title"] = "Subir canción";
    var canciones = ViewBag.CancionesDelArtista as List<Melodix.Modelos.Cancion>;
}

<h2 class="text-white">🎵 Subir nueva canción</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Nombre" class="text-white"></label>
        <input asp-for="Nombre" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Genero" class="text-white"></label>
        <input asp-for="Genero" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Duracion" class="text-white"></label>
        <input asp-for="Duracion" class="form-control" placeholder="Ej: 3:45" />
    </div>

    <div class="form-group">
        <label class="text-white">Archivo de audio (.mp3)</label>
        <input type="file" name="archivo" class="form-control-file" />
    </div>
    <div class="form-group">
        <label class="text-white">Imagen de portada</label>
        <input type="file" name="imagen" class="form-control-file" />
    </div>
    <div class="form-group">
        <label asp-for="AlbumId" class="text-white">Álbum</label>
        <select asp-for="AlbumId" class="form-control" asp-items="ViewBag.Albumes">
            <option value="">-- Selecciona un álbum --</option>
        </select>
        <span asp-validation-for="AlbumId" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-success mt-3">Guardar canción</button>
</form>

<hr class="text-white" />

<h3 class="text-white mt-5">📜 Mis canciones subidas</h3>

@if (canciones != null && canciones.Any())
{
    <table class="table table-dark mt-3">
        <thead>
            <tr>
                <th>Portada</th>
                <th>Nombre</th>
                <th>Género</th>
                <th>Duración</th>
                <th>Audio</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in canciones)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(c.Urlimagen))
                        {
                            <img src="@c.Urlimagen" width="80" class="rounded shadow" />
                        }
                        else
                        {
                            <span class="text-muted">Sin imagen</span>
                        }
                    </td>
                    <td>@c.Nombre</td>
                    <td>@c.Genero</td>
                    <td>@c.Duracion</td>
                    <td><audio controls src="@c.ArchivoURL" style="width: 180px;"></audio></td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@c.CancionId" class="btn btn-sm btn-warning">✏️</a>
                        <a asp-action="Delete" asp-route-id="@c.CancionId" class="btn btn-sm btn-danger">🗑️</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-white">Aún no has subido ninguna canción.</p>
}

