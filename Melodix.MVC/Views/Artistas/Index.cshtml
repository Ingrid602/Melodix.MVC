@model IEnumerable<Melodix.Modelos.Artista>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4">
    <h2 class="text-white mb-4">Artistas</h2>

    <div class="d-flex flex-wrap gap-4">
        @foreach (var artista in Model)
        {
            <div class="text-center" style="width: 150px;">
                <a asp-action="Details" asp-route-id="@artista.ArtistaId" class="text-decoration-none text-white">
                    <img src="@artista.ImagenUrl" class="rounded-circle" style="width: 150px; height: 150px; object-fit: cover;" alt="@artista.NombreArtistico" />
                    <div class="mt-2 fw-bold">@artista.NombreArtistico</div>
                    <small class="text-muted">Artista</small>
                </a>
            </div>
        }
    </div>
</div>