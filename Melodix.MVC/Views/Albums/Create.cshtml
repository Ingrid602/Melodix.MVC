@model Melodix.Modelos.Album

@{
    ViewData["Title"] = "Crear Álbum";
}

<div class="container py-5 text-white">
    <div class="bg-dark p-5 rounded-4 shadow-lg">
        <h2 class="mb-4 text-success">🎶 Crear nuevo álbum</h2>

        <form asp-action="Create" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label asp-for="Nombre" class="form-label">Nombre del álbum</label>
                <input asp-for="Nombre" class="form-control" placeholder="Ej: Mi primer álbum" required />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FechaLanzamiento" class="form-label">Fecha de lanzamiento</label>
                <input asp-for="FechaLanzamiento" type="date" class="form-control" required />
                <span asp-validation-for="FechaLanzamiento" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="imagen" class="form-label">Imagen de portada</label>
                <input type="file" name="imagen" class="form-control" accept="image/*" />
            </div>

            <div class="d-flex justify-content-end mt-4">
                <button type="submit" class="btn btn-success px-4">Crear álbum</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
