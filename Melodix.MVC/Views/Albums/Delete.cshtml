@model Melodix.Modelos.Album

@{
    ViewData["Title"] = "Eliminar Álbum";
}

<div class="container mt-5 text-white bg-dark p-5 rounded shadow">
    <h2 class="mb-4 text-danger">¿Estás seguro de que deseas eliminar este álbum?</h2>

    <div class="mb-4 text-center">
        @if (!string.IsNullOrEmpty(Model.urlImagen))
        {
            <img src="@Model.urlImagen" class="img-thumbnail mb-2" style="width: 200px; height: 200px; object-fit: cover;" />
        }
        <h4>@Model.Nombre</h4>
        <p><strong>Fecha de lanzamiento:</strong> @Model.FechaLanzamiento.ToShortDateString()</p>
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.AlbumId" />


        <div class="d-flex justify-content-between">
            <a asp-action="MisAlbumes" class="btn btn-outline-secondary">Cancelar</a>
            <button type="submit" class="btn btn-danger">Eliminar</button>
        </div>
    </form>
</div>
