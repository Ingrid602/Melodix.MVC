@{
    ViewData["Title"] = "Inicio";
}

<!-- Estilos personalizados -->
<style>
    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
        background-color: #121212;
    }
    .inicio-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background: radial-gradient(circle at center, rgba(0, 212, 255, 0.1), rgba(18, 18, 18, 0.95));
        background-color: #121212;
        color: white;
        font-family: 'Segoe UI', sans-serif;
    }

    .card-inicio {
        background-color: #000;
        padding: 40px;
        border-radius: 12px;
        text-align: center;
        width: 400px;
        box-shadow: 0 0 20px rgba(0,0,0,0.3);
        margin-top: -80px;
    }

    .logo {
        width: 70px;
        margin-bottom: 20px;
        display: block;
        margin-left:30px; 
    }

    h2 {
        font-size: 24px;
        margin-bottom: 30px;
        font-weight: normal;
    }

    .btn-spotify {
        background-color: #1db954;
        color: white;
        font-weight: bold;
        padding: 12px 28px;
        border: none;
        border-radius: 25px;
        font-size: 16px;
        margin-bottom: 15px;
        text-decoration: none;
        display: inline-block;
    }

    .btn-spotify:hover {
        background-color: #1ed760;
        text-decoration: none;
        color: white;
    }

    .link-blanco {
        color: rgba(0, 212, 255, 0.8);
        text-decoration: underline;
    }

    .link-blanco:hover {
            color: rgba(0, 212, 255, 1);
    }

    .preferencias {
        font-size: 12px;
        margin-top: 25px;
        color: #b3b3b3;
    }

    .titulo-principal {
        color: white; 
        font-size: 20px; 
        font-weight: bold; 
        text-align: center; 
        margin: 20px 0;
        font-family: 'Arial', sans-serif; 
    }
</style>

<!-- Contenido principal -->
<div class="inicio-container">
    <div class="card-inicio">
        <div style="display: flex; align-items: center; margin-left: 20px;">
            <img src="~/img/logo.png" class="logo" alt="Logo de Melodix" />
            <span style="color: white; font-size: 32px; font-weight: bold; margin-left: 10px;">Melodix</span>
        </div>
        <h2 class="titulo-principal">Música que te impulsa.<br />Solo en Melodix.</h2>

        

        <a href="/Identity/Account/Login" class="btn-spotify">Iniciar sesión</a>

        <p>
            ¿Eres nuevo?
            <a class="link-blanco" href="/Identity/Account/Register">Registrarse gratis</a>
        </p>

        <div class="preferencias">Melodix</div>
    </div>
</div>

